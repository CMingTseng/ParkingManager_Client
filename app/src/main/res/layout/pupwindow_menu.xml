<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:background="#50000000"
         xmlns:android="http://schemas.android.com/apk/res/android"
        
    >
    <LinearLayout
        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/app_bg"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
>       

    
     <Button
		    android:layout_width="fill_parent"
			android:layout_height="45dp"
		    android:text="在场记录"
		    android:textSize="18sp"
		    android:gravity="center"
		    android:textColor="@color/blue"
		    android:id="@+id/active_record_button" 
		    android:background="@drawable/listview_selector"
		    android:drawableLeft="@drawable/icon_record"
		    android:layout_marginTop="10dp"
	 />
 
     <Button
		    android:layout_width="fill_parent"
			android:layout_height="45dp"
		    android:text="收费记录"
		    android:textSize="18sp"
		    android:gravity="center"
		    android:textColor="@color/green"
		    android:drawableLeft="@drawable/icon_fee"
		    android:id="@+id/full_menu_button" 
		    android:background="@drawable/listview_selector"
		     android:layout_marginTop="10dp"
	 />
    <Button
		    android:layout_width="fill_parent"
			android:layout_height="45dp"
		    android:text="收费规则"
		    android:textSize="18sp"
		    android:gravity="center"
		    android:textColor="@color/red"
		    android:drawableLeft="@drawable/icon_fee"
		    android:id="@+id/rule_menu_button" 
		    android:background="@drawable/listview_selector"
		     android:layout_marginTop="10dp"
	  />
     <Button
             android:layout_below="@id/full_menu_button"
		    android:layout_width="fill_parent"
			android:layout_height="45dp"
		    android:text="系统设置"
		    android:textSize="18sp"
		    android:drawableLeft="@drawable/icon_setting"
		    android:gravity="center"
		    android:textColor="@color/gray"
		    android:id="@+id/setting_item" 
		    android:background="@drawable/listview_selector"
		    android:layout_marginTop="10dp"
	 />
      
	     <Button
			    android:layout_width="fill_parent"
			    android:layout_marginTop="10dp"
                android:layout_below="@id/setting_item"
				android:layout_height="45dp"
			    android:text="退出登录"
			    android:textSize="18sp"
			    android:gravity="center"
			    android:textColor="@color/white"
			    android:id="@+id/exit_button" 
			    android:background="@drawable/button_red"
		 />
     </LinearLayout>
    </RelativeLayout>
