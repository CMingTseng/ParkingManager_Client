<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
      <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/common_titlebar"
     >
      <Button
            android:id="@+id/button_return"
            style="@style/comm_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:text="@string/goback" />
      <TextView
            android:id="@+id/TITLE_TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20sp"
       />
      <TextView
            android:id="@+id/icon_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:textSize="12sp"
            android:paddingRight="5dp"
            android:background="@drawable/icon_count"
            android:layout_toRightOf="@id/TITLE_TEXT"
            android:visibility="gone"
       />
      <Button 
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:layout_marginRight="5dp"
		       android:layout_alignParentRight="true"
		       android:background="@drawable/reload_button"
		       android:layout_centerVertical="true"
		       android:id="@+id/RIGHT_BUTTON"
		       android:textColor="#06081A"
		       android:textSize="14sp"
		       android:visibility="gone"
	 />
   <ProgressBar 
	      android:layout_width="wrap_content" 
	      android:layout_height="wrap_content"
	      android:layout_marginRight="10dp"
		  android:layout_alignParentRight="true"
		  android:layout_centerVertical="true"
	      style="?android:attr/progressBarStyleSmall"
	      android:id="@+id/PROGRESS_BAR"
	      android:visibility="gone"
	 >
	</ProgressBar>
     </RelativeLayout>
    <ImageView
        android:id="@+id/colorfulLine"
        android:layout_width="fill_parent"
        android:layout_height="3.3299866dip"
        android:layout_below="@id/topbar"
        android:scaleType="fitXY"
        android:src="@drawable/colorful_line" />
	</RelativeLayout>
 